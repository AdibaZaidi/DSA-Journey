/**
 * Problem: Reverse a String
 * Given a string s, reverse the string and return it.
 *
 * Examples:
 * Input:  s = "for"
 * Output: "rof"
 *
 * Input:  s = "a"
 * Output: "a"
 *
 * Constraints:
 * 1 <= s.length <= 10^6
 * s contains only alphabetic characters (both uppercase and lowercase).
 */

// User function Template for JavaScript
class Solution {
    reverseString(s) {
       s = s.split('');
       s = s.reverse();
       return s.join('');
    }
}

// Example usage
const sol = new Solution();
console.log(sol.reverseString("for"));   // Output: "rof"
console.log(sol.reverseString("a"));     // Output: "a"
